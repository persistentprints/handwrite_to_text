<loadScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            size_hint: 0.3,0.1
            pos_hint: {'x':.35, 'y':.45}
            text: 'simple notes'
            color: 0,0,0,1
            font_name: "8-bit"
            font_size: 50


<appScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
                
        Button:
            name: 'process'
            text: 'process'
            size_hint: .2,.5 
            background_color: .5, .5, .5, 1
            pos_hint:  {'x':.8, 'y':0}   
            font_name: "8-bit"
            font_size: 30
            on_press: root.process()
            
        Button:
            name: 'clear'
            text: 'clear'
            size_hint: .2,.5 
            background_color: .5, .5, .5, 1
            pos_hint:  {'x':.8, 'y':.5}   
            font_name: "8-bit"
            font_size: 30
            on_press: root.clear()

        Label:
            name: 'result'
            text: 'result '
            size_hint: .3, .2
            pos_hint: {'x': 0, 'y': 0}
            color: 0,0,0,1
            font_name: "8-bit"
            font_size: 50

        Label:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle: 
                    pos: self.pos
                    size: self.size    
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle: 
                    pos: (self.x + (self.x * 0.05)), (self.y + (self.y * 0.05))
                    size: (self.width-(self.width * 0.06)), (self.height-(self.height * 0.1))
                    
            id: process        
            name: 'process'
            text: ''
            size_hint: .5, .2
            pos_hint: {'x': 0.3, 'y': 0}
            color: 0,0,0,1
            font_name: "8-bit"
            font_size: 50
            
